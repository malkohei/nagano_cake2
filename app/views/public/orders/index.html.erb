<div class="container">
  <div class="row">
    <div class="col-md-10">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
              <td>
                〒<%= order.postal_code %>
                <%= order.address %>
                <%= order.name %>
              </td>
              <% order.order_details.each do |order_detail| %>
                <td>
                  <%= order_detail.item.name %>
                </td>
                <td>
                  <%= order_detail.item.price %>
                </td>
              <% end %>
              <td>
                <% case order.status when 0 %>
                  <span>入金待ち</span>
                <% when 1 %>
                  <span>入金確認</span>
                <% when 2 %>
                  <span>製作中</span>
                <% when 3 %>
                  <span>発送準備中</span>
                <% when 4 %>
                  <span>発送済み</span>
                <% end %>
              </td>
              <td>
                <%= link_to order_path(order) do %>
                  <button type="button" class="btn btn-primary">表示する</button>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>