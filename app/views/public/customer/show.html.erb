<div class="container">
  <h3 class="mt-4">マイページ</h3>

    <div class="row mt-4">
      <div class="col-md-2">
        <h4><strong>登録情報</strong></h4>
      </div>
      <div class="col-md-4">
        <%= link_to edit_customer_path(current_customer.id) do %>
          <button type="button" class="btn btn-outline-success">編集する</button>
        <% end %>
      </div>
    </div>

    <table class="table table-bordered my-3">
      <tbody>
        <tr>
          <th class="active">氏名</th>
          <td><%= "#{@customer.last_name} #{@customer.first_name}" %></td>
        </tr>
        <tr>
          <th class="active">カナ</th>
          <td><%= "#{@customer.last_name_kana} #{@customer.first_name_kana}" %></td>
        </tr>
        <tr>
          <th class="active">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="active">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="active">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <div class="col-md-2">
        <h4><strong>注文履歴</strong></h4>
      </div>
      <div class="col-md-4">
        <%= link_to orders_path do %>
          <button type="button" class="btn btn-primary">一覧を見る</button>
        <% end %>
      </div>
    </div>
</div>