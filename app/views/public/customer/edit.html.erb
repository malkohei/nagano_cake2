<div class="container">
  <h3>会員情報編集</h3>

  <%= form_for(@customer) do |f| %>
    <div class="form-horizontal">

      <div class="row">
        <div class="col-sm-3">
          <label>氏名</label>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :last_name, autofocus: true %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :first_name, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <label>フリガナ</label>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :last_name_kana, autofocus: true %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <label>郵便番号</label>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <label>住所</label>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :address, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <label>電話番号</label>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :telephone_number, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <label>メールアドレス</label>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :email, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-3">
          <%= f.submit '編集内容を保存', class: "btn btn-outline-success" %>
        </div>
        <div class="col-sm-3">
          <%= link_to quit_customer_index_path do %>
            <button type="button" class="btn btn-danger">退会する</button>
          <% end %>
        </div>
      </div>

    </div>
  <% end %>


</div>