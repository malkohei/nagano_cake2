<div class="container">
  <div class="row">

    <div class="col-xs-10">
      <h3>商品一覧<span style="font-size:70%;">(全<%= @quantity %>件)</span></h3>
    </div>

    <% @items.each do |item| %>
      <div class="col-xs-3 text-center">
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, format: 'jpeg', fallback: "logo.png", size: 150 %><br />
        <% end %>
        <% if item.is_active == false %>
          <%= item.name %><br />
          ¥<%= item.price %>
          <span class="text-success">販売中</span>
        <% else %>
          <span class="text-muted"><%= item.name %></span><br />
          <span class="text-muted">¥<%= item.price %></span>
          <span class="text-danger">売切中</span>
        <% end %>
      </div>
    <% end %>
    <%= paginate @items %>
  </div>
</div>