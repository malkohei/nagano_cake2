<div class="container">
  <div class="form-horizontal">
    <h3 class="bg-light">新規会員登録</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>


    <div class="row">
      <div class="col-auto">
        <label>名前</label>
      </div>
      <div class="form_group col-auto">
        <label>(姓)</label>
        <%= f.text_field :last_name, autofocus: true %>
      </div>
      <div class="form-group col-auto">
        <label>(名)</label>
        <%= f.text_field :first_name, autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-auto">
        <label>フリガナ</labal>
      </div>
      <div class="form-group col-auto">
        <label>(セイ)</label>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </div>
      <div class="form-group col-auto">
        <label>(メイ)</label>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-auto">
        <label>メールアドレス</label>
      </div>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class="col-auro">
        <label>郵便番号(ハイフンなし)</label>
      </div>
      <div class="form-group">
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-auto">
        <label>住所</label>
      </div>
      <div class="form-group">
        <%= f.text_field :address, autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-auto">
        <label>電話番号(ハイフンなし)</label>
      </div>
      <div class="form-group">
        <%= f.text_field :telephone_number, autofocus: true %>
      </div>
    </div>

      <div class="form-group">
        <label>パスワード</label>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <label>パスワード(確認用)</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    <% end %>

    <h3 class="bg-light">既に登録済みの方</h3>

    <div class="col-auto">
      <span><a href="/customers/sign_in">こちら</a> からログインしてください</span>
    </div>

  </div>
</div>