<div class="container position-relative">

    <div class="row">
        <h3 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">商品一覧</h3>
        <%= link_to new_admin_item_path do %>
            <div class="position-absolute top-0 end-0">
                <i class="fas fa-plus shadow p-3 mb-5 bg-white rounded"></i>
            </div>
        <% end %>
    </div>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ステータス</th>
                </tr>
            </thead>

            <tbody>
                <% @items.each do |item| %>
                    <tr>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= link_to admin_item_path(item.id) do %>
                                <%= item.name %>
                            <% end %>
                        </td>
                        <td>
                            <%= item.price %>
                        </td>
                        <td>
                            <% if item.is_active == false %>
                                <span class="text-success">販売中</span>
                            <% else %>
                                <span class="text-muted">販売停止中</span>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
                <%= paginate @items %>
            </tbody>
        </table>
    </div>

</div>
