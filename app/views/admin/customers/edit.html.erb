<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3><%= @customer.last_name %><%= @customer.first_name %>の会員情報編集</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7">
      <%= form_for(@customer, url: admin_customer_path, method: :patch) do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
              <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
              <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="2"><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.select :is_deleted,{有効:false, 退会:true} %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="col-md-3 offset-md-2">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>