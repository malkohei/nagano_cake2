<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_deleted? %>
              <span class="text-muted">退会済み</span>
            <% else %>
              <span class="text-success">有効</span>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 offset-md-1">
      <%= link_to edit_admin_customer_path(@customer.id) do %>
        <button type="button" class="btn btn-success">編集する</button>
      <% end %>
    </div>
    <div class="col-md-4 offset-md-2">
      <%= link_to admin_orders_path do %>
        <button type="button" class="btn btn-primary">注文履歴一覧へ</button>
      <% end %>
    </div>
  </div>

</div>