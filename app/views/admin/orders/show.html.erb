<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3>注文履歴詳細</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td><strong>購入者</strong></td>
            <td><%= @order.name %></td>
          </tr>
          <tr>
            <td><strong>注文日</strong></td>
            <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
          <tr>
            <td><strong>配送先</strong></td>
            <td>〒<%= @order.postal_code %> <%= @order.address %><br />
                <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td><strong>支払方法</strong></td>
            <td><%= @order.payment_method %></td>
          </tr>
          <%= form_for(@order, url: admin_order_path(@order)) do |f| %>
            <tr>
              <td><strong>注文ステータス</strong></td>
              <td>
                <%= f.select :status, Order.statuses.keys,{} %>
                <%= f.submit '更新', class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <% @order_details.each do |order_detail| %>
          <tbody>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= (order_detail.item.price * 1.1).round.to_i %></td>
              <td><%= order_detail.amount %></td>
              <td><%= (order_detail.item.price * 1.1).round.to_i * order_detail.amount.to_i %></td>
              <td>
                <%= form_for(order_detail, url: admin_making_status_update_path(order_detail.id), method: :patch) do |f| %>
                  <%= f.select :making_status, OrderDetail.making_statuses.keys,{} %>
                  <%= f.submit '更新', class: "btn btn-success" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table-borderless">
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= @order.total_payment - @order.shipping_cost %></td>
          </tr>
          <tr>
            <td>送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <td><strong>請求金額合計</strong></td>
            <td><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>