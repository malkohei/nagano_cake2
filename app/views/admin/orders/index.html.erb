<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3>注文履歴一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td>
                <%= link_to admin_order_path(order.id) do %>
                  <%= l order.created_at %>
                <% end %>
              </td>
              <td>
                <%= order.name %>
              </td>
              <td>
                <%= order.order_details.sum(:amount) %>
              </td>
              <td>
                <%= order.status %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <%= paginate @orders %>
</div>